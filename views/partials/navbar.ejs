<nav class="navbar" aria-label="Main navigation">
  <a href="/" class="nav-brand">
    Gabble Learning
  </a>

  <ul class="nav-links">
    <% if(isAuthenticated) { %>
      <li>
        <a href="/cards"
           <%= currentPath.startsWith('/cards') ? 'aria-current="page"' : '' %>>
          My Cards
        </a>
      </li>
      <li>
        <a href="/decks"
           <%= currentPath.startsWith('/decks') ? 'aria-current="page"' : '' %>>
          My Decks
        </a>
      </li>
      <li class="nav-user-section">
        <a href="/profile" class="nav-user">
          <%= currentUser.name %>
          <% if(currentUser.role === 'admin') { %>
            <span class="badge badge-admin">Admin</span>
          <% } %>
        </a>
        <form action="/auth/logout" method="POST" class="nav-form">
          <button type="submit" class="btn-logout">Logout</button>
        </form>
      </li>
    <% } else { %>
      <li>
        <a href="/auth/login"
           <%= currentPath === '/auth/login' ? 'aria-current="page"' : '' %>>
          Login
        </a>
      </li>
      <li>
        <a href="/auth/register"
           <%= currentPath === '/auth/register' ? 'aria-current="page"' : '' %>>
          Register
        </a>
      </li>
    <% } %>
  </ul>
</nav>
