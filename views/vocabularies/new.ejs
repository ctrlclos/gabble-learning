<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head') %>
  <title><%= title %> | Gabble Learning</title>
</head>
<body>
  <%- include('../partials/navbar') %>

  <main class="container">
    <%- include('../partials/flash') %>

    <h1>Add New Word</h1>

    <form action="/vocabularies" method="POST" class="vocab-form">
      <div class="form-group">
        <label for="word">Word</label>
        <input type="text" id="word" name="word" placeholder="Enter a word" required>
      </div>

      <div class="form-group">
        <label for="definition">Definition</label>
        <input type="text" id="definition" name="definition" placeholder="Enter the definition" required>
      </div>

      <div class="form-group">
        <label for="translation">Translation</label>
        <input type="text" id="translation" name="translation" placeholder="Enter a translation (optional)">
      </div>

      <div class="form-group">
        <label for="difficultyLevel">Difficulty Level</label>
        <select id="difficultyLevel" name="difficultyLevel" required>
          <option value="">Select Difficulty Level</option>
          <option value="beginner">Beginner</option>
          <option value="intermediate">Intermediate</option>
          <option value="advanced">Advanced</option>
        </select>
      </div>

      <div class="form-group">
        <label for="tags">Tags</label>
        <input type="text" id="tags" name="tags" placeholder="Enter tags separated by commas (optional)">
      </div>

      <div class="form-actions">
        <button type="submit" class="btn btn-primary">Add Word</button>
        <a href="/vocabularies" class="btn btn-secondary">Cancel</a>
      </div>
    </form>
  </main>

  <%- include('../partials/footer') %>
</body>
</html>
