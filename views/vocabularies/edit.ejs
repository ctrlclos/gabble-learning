<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head') %>
  <title><%= title %> | Gabble Learning</title>
</head>
<body>
  <%- include('../partials/navbar') %>

  <main class="container">
    <%- include('../partials/flash') %>

    <h1>Edit: <%= vocabulary.word %></h1>

    <form action="/vocabularies/<%= vocabulary._id %>?_method=PUT" method="POST" class="vocab-form">
      <div class="form-group">
        <label for="word">Word</label>
        <input type="text" id="word" name="word" value="<%= vocabulary.word %>" required>
      </div>

      <div class="form-group">
        <label for="definition">Definition</label>
        <input type="text" id="definition" name="definition" value="<%= vocabulary.definition %>" required>
      </div>

      <div class="form-group">
        <label for="translation">Translation</label>
        <input type="text" id="translation" name="translation" value="<%= vocabulary.translation || '' %>">
      </div>

      <div class="form-group">
        <label for="difficultyLevel">Difficulty Level</label>
        <select id="difficultyLevel" name="difficultyLevel" required>
          <option value="beginner" <%= vocabulary.difficultyLevel === 'beginner' ? 'selected' : '' %>>Beginner</option>
          <option value="intermediate" <%= vocabulary.difficultyLevel === 'intermediate' ? 'selected' : '' %>>Intermediate</option>
          <option value="advanced" <%= vocabulary.difficultyLevel === 'advanced' ? 'selected' : '' %>>Advanced</option>
        </select>
      </div>

      <div class="form-actions">
        <button type="submit" class="btn btn-primary">Update Word</button>
        <a href="/vocabularies" class="btn btn-secondary">Cancel</a>
      </div>
    </form>
  </main>

  <%- include('../partials/footer') %>
</body>
</html>
