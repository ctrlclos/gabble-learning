# MongoDB connection URI
# Replace with your actual database URI
DATABASE_URI=your_database_uri

# Server port (optional, defaults to 3000)
PORT=3000

# Session secret - use a long random string
SESSION_SECRET=your_session_secret_here

# Environment (development or production)
NODE_ENV=development

# Bcrypt salt rounds (optional, defaults to 12)
BCRYPT_SALT_ROUNDS=12

# Rate Limiting Configuration (optional)
# Maximum AI API requests per window (defaults to 2)
RATE_LIMIT_AI_MAX_REQUESTS=2
# Time window in milliseconds (defaults to 24 hours = 86400000)
RATE_LIMIT_AI_WINDOW_MS=86400000
# Human-readable window description for error messages (defaults to 'day')
RATE_LIMIT_AI_WINDOW_DESC=day
